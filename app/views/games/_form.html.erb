<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if params[:player] %>
    <input type="hidden" name="player" value="<%= params[:player] %>">
  <% else %>
    <div class="field">
      <%= f.label :player %><br />
      <%= f.select(:player_id, options_for_select(
      @players.collect{|p| [p.name, p.id]}
    )) %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :morgue %><br />
    <%= f.file_field 'morgue' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
