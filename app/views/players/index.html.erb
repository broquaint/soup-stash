<h1>Listing players</h1>

<table>
  <tr>
    <th>For game</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.for_game %></td>
    <td><%= player.name %></td>

    <td><%= link_to 'Show', [@user, player] %></td>
    <td><%= link_to 'Edit', edit_user_player_path(@user, player) %></td>
    <td><%= link_to 'Destroy', [@user,player], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

