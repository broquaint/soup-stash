<p id="notice"><%= notice %></p>

<div class='row'>
  <div class='span8'>
    <h1><%= @player.name %></td>
    <h4>Recent games</h4>
    <table class='table table-striped table-condensed'>
      <thead>
        <tr>
          <th>Score</th>
          <th>Player</th>
          <th>Race + Background</th>
          <th>God</th>
          <th>XL</TH>
          <th>Killer</th>
        </tr>
      </thead>
      <tbody>
        <% for game in @games.desc(:end_time).limit(10) %>
        <tr>
	  <td><%= link_to game.score, game_path(game) %>
	    <% if game.won %><i class="icon-star" title="Won!"></i><% end %></td>
          <td><%= game.character %> the <%= game.title %></td>
          <td><%= game.race %> <%= game.background %></td>
          <td><%= game.god || '-' %></td>
          <td><%= game.level %></td>
	  <td><%= game.killer || ( game.won ? 'WON!' : 'quit' ) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @games %>
  </div>
  <div class='span4'>
    <h4>Cumulative numbers</h4>
    <dl class="dl-horizontal">
      <dt>Games played</dt><dd><%= @player.played || '-' %></dd>
      <dt>Total kills</dt> <dd><%= @player.kills  || '-' %></dd>
      <!-- TODO Make seconds human readable -->
      <dt>Time spent</dt>  <dd><%= @player.time_spent %> seconds</dd>
      <dt>Levels seen</dt> <dd><%= @player.levels_seen || '-' %></dd>
    </dl>
    <% if @games.length > 0 %>
    <h4>Favourites</h4>
    <dl class="dl-horizontal">
      <!-- TODO Handle ties somehow. -->
      <dt>Race</dt><dd><%= @race[:fave] %> x <em><%= @race[:count] %></em></dd>
      <dt>Background</dt><dd><%= @background[:fave] %> x <em><%= @background[:count] %></em></dd>
      <% unless @god[:fave].nil? and @god[:fave] != 'none' %>
      <dt>God</dt><dd><%= @god[:fave] %> x <em><%= @god[:count] %></em></dd>
      <% end %>
    </dl>
    <% end %>

    <!--
    <% if @user == current_user %>
      <p><i class="icon-plus-sign"></i><%= link_to 'Add game', new_game_path(:player => @player.id) %></p>
      <p><%= link_to 'Edit', edit_user_player_path(@user, @player) %></p>
    <% end %>
    <% if @user.players.length > 1 %>
      <p><%= link_to "The user page of #{@user.name}", user_players_path %></p>
    <% end %>
    -->
  </div>
</div>
