<h1>Users</h1>
<p>User: <%= @user.name %></p>

<div id='players'>
  <% if @user.players %>
    <ul>
      <% for p in @user.players %>
        <li><%= link_to "#{p.name}: #{p.for_game}", user_player_path(@user, p) %>
      <% end %>
    </ul>
  <% end %>
  <% if @user == current_user %>
    <%= link_to 'Add a player.', new_user_player_path(@user) %>
  <% end %>
</div>
