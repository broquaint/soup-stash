<div class="dropdown">
  <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button">Race + Background <i class='icon-chevron-down'></i></a>
  <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
    <li class="dropdown-submenu">
      <a href="#" tabindex="-1">Race</a>
      <ul class="dropdown-menu">
	<li><%= link_to_with '<i class="icon-remove"></i> None'.html_safe, race: '' %></li>
	<% for race in DCSS::RACE.values %>
	<li><%= link_to_with race, "race" => race %></li>
	<% end %>
      </ul>
    </li>
    <li class="dropdown-submenu">
      <a href="#" tabindex="-1">Background</a>
      <ul class="dropdown-menu">
	<li><%= link_to_with '<i class="icon-remove"></i> None'.html_safe, background: '' %></li>
	<% for background in DCSS::BACKGROUND.values %>
	<li><%= link_to_with background, "background" => background %></li>
	<% end %>
      </ul>
    </li>
  </ul>
</div>
